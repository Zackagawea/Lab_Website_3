//- player-info.pug
include ../partials/header.pug
include ../partials/menu.pug

div.container
  br
  div.row
    div.col-4
      div.card
        //- TODO: Modify the pug code below to conditionally set the image_src
        if result_2
          - var image_src='../'+result_2.img_src
        else
          - var image_src='../../resources/img/helmet.jpg'
        img.card-img-top#player_img(src= image_src, alt="Football Player")
        div.card-body.mx-auto
          form.form(action="/player_info/select_player", method="get")
            select.custom-select(name="player_choice", onchange="this.form.submit()")
              option(selected) Selected Player
              if(result_1)
               for i in result_1
                option(value=i.id)=i.name
              //- TODO: Populate the select with player options. Set the value to the player's id and display the player's name.
    div.col-8
        div.table-responsive
          table.table
            //- TODO: Set the player's information. On select, fill in the player's information in each of the field below. You will need to calculate the average rushing, receiving, and passing yards.
            tr
              th Year
              if(result_2)
               td #{result_2.year}
              else
               td null
            tr
              th Major
              if(result_2)
               td #{result_2.major}
              else
               td null
            tr
              th Games Played
              if(result_2)
               td #{result_3.count}
              else
               td null
            tr
              if(result_2)
               td Passing Yards: #{result_2.passing_yards}
               td Avg. Passing Yards: #{result_2.passing_yards / result_3.count}
              else
               td Passing Yards: null
               td Avg. Passing Yards: null
            tr
              if(result_2)
               td Rushing Yards: #{result_2.rushing_yards}
               td Avg. Rushing Yards: #{result_2.rushing_yards / result_3.count}
              else
               td Rushing Yards: null
               td Avg. Rushing Yards: null
            tr
              if(result_2)
               td Receiving Yards: #{result_2.receiving_yards}
               td Avg. Receiving Yards: #{result_2.rushing_yards / result_3.count}
              else
               td Receiving Yards: null
               td Avg. Receiving Yards: null

include ../partials/footer.pug
